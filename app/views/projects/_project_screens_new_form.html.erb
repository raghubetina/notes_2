<!-- Form screen start -->
<%= form_with(model: @screen, local: true) do |f| %>
<!-- Form screen end -->

  <!-- Label and input for project_id start -->
  <!-- Input for project_id start -->
  <%= f.hidden_field :project_id, value: @project.id %>
  <!-- Input for project_id end -->
  <!-- Label and input for project_id end -->

  <!-- Label and input for wireframe start -->
  <div class="form-group">
    <%= f.label :wireframe %>

    <!-- Input for wireframe start -->
    <%= f.text_field :wireframe, class: "form-control" %>
    <!-- Input for wireframe end -->
  </div>
  <!-- Label and input for wireframe end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for url_pattern start -->
  <div class="form-group">
    <%= f.label :url_pattern %>

    <!-- Input for url_pattern start -->
    <%= f.text_field :url_pattern, class: "form-control" %>
    <!-- Input for url_pattern end -->
  </div>
  <!-- Label and input for url_pattern end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <%= f.submit "Create screen", class: "btn btn-block btn-outline-secondary" %>
<% end %>
