<!-- Form calculation start -->
<%= form_with(model: @calculation, local: true) do |f| %>
<!-- Form calculation end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for project_id start -->
  <!-- Input for project_id start -->
  <%= f.hidden_field :project_id, value: @project.id %>
  <!-- Input for project_id end -->
  <!-- Label and input for project_id end -->

  <%= f.submit "Create calculation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
