<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Calculations

    <a data-toggle="collapse" href="#project_calculations_new_form">
      Add calculation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @project.calculations.each do |calculation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to calculation, calculation %>

        <%= link_to calculation, method: :delete, data: { confirm: "Do you really want to delete this calculation" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="project_calculations_new_form">
        <%= render partial: "projects/project_calculations_new_form" %>
      </div>
    </div>

  </ul>
</div>
