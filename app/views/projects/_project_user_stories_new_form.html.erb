<%= form_with(model: @user_story, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :role %>

    <%= f.text_field :role, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :capability %>
    <%= f.text_area :capability, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :benefit %>
    <%= f.text_area :benefit, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :project_id, value: @project.id %>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create user story", class: "btn btn-block btn-outline-secondary" %>
<% end %>
