<%= form_with(model: @erd_url, local: true) do |f| %>

  <%= f.hidden_field :project_id, value: @project.id %>

  <div class="form-group">
    <%= f.label :ideas_url %>

    <%= f.text_field :ideas_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit "Create erd url", class: "btn btn-block btn-outline-secondary" %>
<% end %>
