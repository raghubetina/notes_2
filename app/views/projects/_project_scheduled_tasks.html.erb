<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Scheduled Tasks

    <a data-toggle="collapse" href="#project_scheduled_tasks_new_form">
      Add scheduled task
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @project.scheduled_tasks.each do |scheduled_task| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to scheduled_task, scheduled_task %>

        <%= link_to scheduled_task, method: :delete, data: { confirm: "Do you really want to delete this scheduled_task" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="project_scheduled_tasks_new_form">
        <%= render partial: "projects/project_scheduled_tasks_new_form" %>
      </div>
    </div>

  </ul>
</div>
