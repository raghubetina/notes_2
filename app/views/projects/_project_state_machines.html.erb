<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    State Machines

    <a data-toggle="collapse" href="#project_state_machines_new_form">
      Add state machine
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @project.state_machines.each do |state_machine| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to state_machine, state_machine %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to state_machine, method: :delete, data: { confirm: "Do you really want to delete this state_machine" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="project_state_machines_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
