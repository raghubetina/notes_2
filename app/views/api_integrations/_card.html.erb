<div class="card mb-3">
  <h2 class="card-header h4">
    Api Integration #<%= api_integration.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Documentation</dt>
      <!-- Display documentation start -->
      <dd><%= api_integration.documentation %></dd>
      <!-- Display documentation end -->

      <dt>Purpose</dt>
      <!-- Display purpose start -->
      <dd><%= api_integration.purpose %></dd>
      <!-- Display purpose end -->

      <dt>Project</dt>
      <!-- Display project_id start -->
      <dd><%= api_integration.project_id %></dd>
      <!-- Display project_id end -->

      <dt>Example endopoint</dt>
      <!-- Display example_endopoint start -->
      <dd><%= api_integration.example_endopoint %></dd>
      <!-- Display example_endopoint end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back api_integration, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link api_integration start -->
      <div class="col">
        <%= link_to edit_api_integration_url(api_integration), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link api_integration end -->

      <!-- Delete link api_integration start -->
      <div class="col">
        <%= link_to api_integration, method: :delete, data: { confirm: "Do you really want to delete this api_integration?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link api_integration end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(api_integration.updated_at) %> ago
  </div>
</div>
