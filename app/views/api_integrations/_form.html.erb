<% was_validated = api_integration.errors.any? %>

<%= form_with(model: api_integration, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% documentation_class = "form-control" %>
    <% documentation_was_invalid = api_integration.errors.include?(:documentation) %>

    <% if was_validated %>
      <% if documentation_was_invalid %>
        <% documentation_class << " is-invalid" %>
      <% else %>
        <% documentation_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :documentation %>
    <%= f.text_field :documentation, class: documentation_class, placeholder: "Enter documentation" %>
    <% if documentation_was_invalid %>
      <% api_integration.errors.full_messages_for(:documentation).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% purpose_class = "form-control" %>
    <% purpose_was_invalid = api_integration.errors.include?(:purpose) %>

    <% if was_validated %>
      <% if purpose_was_invalid %>
        <% purpose_class << " is-invalid" %>
      <% else %>
        <% purpose_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :purpose %>
    <%= f.text_field :purpose, class: purpose_class, placeholder: "Enter purpose" %>
    <% if purpose_was_invalid %>
      <% api_integration.errors.full_messages_for(:purpose).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% project_class = "form-control" %>
    <% project_was_invalid = api_integration.errors.include?(:project) %>

    <% if was_validated %>
      <% if project_was_invalid %>
        <% project_class << " is-invalid" %>
      <% else %>
        <% project_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :project_id %>
    <%= f.collection_select :project_id, Project.all, :id, :to_s, {}, class: "form-control" %>
    <% if project_was_invalid %>
      <% api_integration.errors.full_messages_for(:project).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% example_endopoint_class = "form-control" %>
    <% example_endopoint_was_invalid = api_integration.errors.include?(:example_endopoint) %>

    <% if was_validated %>
      <% if example_endopoint_was_invalid %>
        <% example_endopoint_class << " is-invalid" %>
      <% else %>
        <% example_endopoint_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :example_endopoint %>
    <%= f.text_field :example_endopoint, class: example_endopoint_class, placeholder: "Enter example endopoint" %>
    <% if example_endopoint_was_invalid %>
      <% api_integration.errors.full_messages_for(:example_endopoint).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
