<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Callbacks

    <a data-toggle="collapse" href="#event_callbacks_new_form">
      Add callback
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.callbacks.each do |callback| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to callback, callback %>

        <%= link_to callback, method: :delete, data: { confirm: "Do you really want to delete this callback" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_callbacks_new_form">
        <%= render partial: "events/event_callbacks_new_form" %>
      </div>
    </div>

  </ul>
</div>
