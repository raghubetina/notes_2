<% was_validated = state_machine.errors.any? %>

<%= form_with(model: state_machine, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% link_to_diagram_class = "form-control" %>
    <% link_to_diagram_was_invalid = state_machine.errors.include?(:link_to_diagram) %>

    <% if was_validated %>
      <% if link_to_diagram_was_invalid %>
        <% link_to_diagram_class << " is-invalid" %>
      <% else %>
        <% link_to_diagram_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :link_to_diagram %>
    <%= f.text_field :link_to_diagram, class: link_to_diagram_class, placeholder: "Enter link to diagram" %>
    <% if link_to_diagram_was_invalid %>
      <% state_machine.errors.full_messages_for(:link_to_diagram).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% project_class = "form-control" %>
    <% project_was_invalid = state_machine.errors.include?(:project) %>

    <% if was_validated %>
      <% if project_was_invalid %>
        <% project_class << " is-invalid" %>
      <% else %>
        <% project_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :project_id %>
    <%= f.collection_select :project_id, Project.all, :id, :to_s, {}, class: "form-control" %>
    <% if project_was_invalid %>
      <% state_machine.errors.full_messages_for(:project).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% note_class = "form-control" %>
    <% note_was_invalid = state_machine.errors.include?(:note) %>

    <% if was_validated %>
      <% if note_was_invalid %>
        <% note_class << " is-invalid" %>
      <% else %>
        <% note_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :notes %>
    <%= f.text_area :notes, class: note_class, placeholder: "Enter note" %>
    <% if note_was_invalid %>
      <% state_machine.errors.full_messages_for(:note).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dsl_class = "form-control" %>
    <% dsl_was_invalid = state_machine.errors.include?(:dsl) %>

    <% if was_validated %>
      <% if dsl_was_invalid %>
        <% dsl_class << " is-invalid" %>
      <% else %>
        <% dsl_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dsl %>
    <%= f.text_area :dsl, class: dsl_class, placeholder: "Enter dsl" %>
    <% if dsl_was_invalid %>
      <% state_machine.errors.full_messages_for(:dsl).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% diagram_class = "form-control" %>
    <% diagram_was_invalid = state_machine.errors.include?(:diagram) %>

    <% if was_validated %>
      <% if diagram_was_invalid %>
        <% diagram_class << " is-invalid" %>
      <% else %>
        <% diagram_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :diagram %>
    <%= f.file_field :diagram, class: "form-control" %>
    <% if diagram_was_invalid %>
      <% state_machine.errors.full_messages_for(:diagram).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% table_class = "form-control" %>
    <% table_was_invalid = state_machine.errors.include?(:table) %>

    <% if was_validated %>
      <% if table_was_invalid %>
        <% table_class << " is-invalid" %>
      <% else %>
        <% table_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :table %>
    <%= f.text_field :table, class: table_class, placeholder: "Enter table" %>
    <% if table_was_invalid %>
      <% state_machine.errors.full_messages_for(:table).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% column_class = "form-control" %>
    <% column_was_invalid = state_machine.errors.include?(:column) %>

    <% if was_validated %>
      <% if column_was_invalid %>
        <% column_class << " is-invalid" %>
      <% else %>
        <% column_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :column %>
    <%= f.text_field :column, class: column_class, placeholder: "Enter column" %>
    <% if column_was_invalid %>
      <% state_machine.errors.full_messages_for(:column).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
