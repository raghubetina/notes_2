<div class="card mb-3">
  <h2 class="card-header h4">
    Calculation #<%= calculation.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Description</dt>
      <dd><%= calculation.description %></dd>

      <dt>Project</dt>
      <dd>
        <% if @calculation.project.present? %>
          <%= link_to calculation.project, calculation.project %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back calculation, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_calculation_url(calculation), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to calculation, method: :delete, data: { confirm: "Do you really want to delete this calculation?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(calculation.updated_at) %> ago
  </div>
</div>
