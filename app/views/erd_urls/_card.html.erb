<div class="card mb-3">
  <h2 class="card-header h4">
    Erd Url #<%= erd_url.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Project</dt>
      <dd>
        <% if @erd_url.project.present? %>
          <%= link_to erd_url.project, erd_url.project %>
        <% end %>
      </dd>

      <dt>Ideas url</dt>
      <dd><%= erd_url.ideas_url %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @erd_url.image, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back erd_url, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_erd_url_url(erd_url), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to erd_url, method: :delete, data: { confirm: "Do you really want to delete this erd_url?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(erd_url.updated_at) %> ago
  </div>
</div>
